<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_150"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.smartagriculture.myview.TextDrawable
            android:id="@+id/textDrawable4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_20"
            android:text="全部园区"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_23"
            app:leftDrawable="@mipmap/home_item_iv"
            app:leftDrawableHeight="@dimen/dp_30"
            app:leftDrawableWidth="@dimen/dp_10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_20"
            android:scaleType="fitStart"
            android:src="@mipmap/pull_blue" />
    </LinearLayout>


</RelativeLayout>